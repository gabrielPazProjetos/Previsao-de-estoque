import pandas as pd

df = pd.read_csv("../dataset/dataset-1000-com-preco-promocional-e-renovacao-estoque.csv")
df["DATA_EVENTO"] = pd.to_datetime(df["DATA_EVENTO"], errors="coerce")

sample = df.sort_values(["ID_PRODUTO","DATA_EVENTO"]).groupby("ID_PRODUTO").tail(1).copy()

cenarios = []
for _, row in sample.iterrows():
    base = {
        "ID_PRODUTO": row["ID_PRODUTO"],
        "DATA_EVENTO": row["DATA_EVENTO"].strftime("%Y-%m-%d"),
        "PRECO": row["PRECO"],
        "FLAG_PROMOCAO": row["FLAG_PROMOCAO"]
    }
    cenarios.append({**base, "PRECO": max(0.0, base["PRECO"] * 0.9), "FLAG_PROMOCAO": 1})
    cenarios.append({**base, "PRECO": base["PRECO"] * 1.1, "FLAG_PROMOCAO": 0})

cenarios_df = pd.DataFrame(cenarios)

def regra_simples(row):
    base_estoque = df[df["ID_PRODUTO"] == row["ID_PRODUTO"]]["QUANTIDADE_ESTOQUE"].tail(1).values[0]
    ajuste_promo = -10 if row["FLAG_PROMOCAO"] == 1 else 0
    ajuste_preco = -5 if row["PRECO"] < df[df["ID_PRODUTO"] == row["ID_PRODUTO"]]["PRECO"].mean() else 5
    prev = max(0, base_estoque + ajuste_promo + ajuste_preco)
    return int(prev)

cenarios_df["PREV_QUANTIDADE_ESTOQUE"] = cenarios_df.apply(regra_simples, axis=1)
cenarios_df.to_csv("../reports/previsoes_exemplo.csv", index=False)

print("previsoes_exemplo.csv gerado")
print(cenarios_df.head())
